# Advanced JD Transcripts Environment Variables

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend Configuration
FRONTEND_URL=https://jd-reporting-company.netlify.app
CORS_ORIGIN=https://jd-reporting-company.netlify.app

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/jd-transcripts

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
ADMIN_EMAIL=admin@jdlegaltranscripts.com

# File Upload Configuration
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=audio,video

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cloud Storage (Optional - AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=jd-transcripts-files
AWS_REGION=us-east-1